{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Async",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Exceptions",
      "Serilog.Exceptions.EntityFrameworkCore",
      "Serilog.Enrichers.Sensitive"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithExceptionDetails",
      "WithMasking"
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/log-.txt",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5313;Database=main_db;Username=admin;Password=password"
  },

  "JwtSettings": {
    "Issuer":  "car-service",
    "Audience": "unknown",
    "SecretKey": "d1e4L3zb1b9qF/gmXLdmE1op6mYImVU4VfW+HjNh3iA=",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays":   30
  },

  "PostgresSettings": {
    "Host":     "localhost",
    "Port":     5313,
    "Database": "main_db",
